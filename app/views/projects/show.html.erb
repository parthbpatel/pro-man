<div class="">
	<div class="">
		<div class="">
			<h1><%= @project.name %></h1>
			<h2> <%= link_to @project.team.name, team_path(@project.team) %></h2>
			<div class="">
				<div class="">
					<p>Created on
						<%= (@project.created_at) %> by <%= @project.user.name %> / Modified
						<%= (@project.updated_at) %></p>
				</div>
				<div class="">
					<div class="buttons">
						<%= link_to 'Edit Project', edit_project_path(@project), class:'button' %>
						<%= link_to 'Delete Project', @project, method: :delete, data: { confirm: 'Are you sure'}, class:'button is-danger is-outlined' %>
					</div>
				</div>
			</div>
			<hr />
			<div class="">
				<%= @project.description.html_safe %>
			</div>
		</div>
	</div>
</div>
